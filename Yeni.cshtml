@model HtmlHelperFor.Models.Personel

@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni</h2>

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model=>model.Ad,new { @class="control-label col-md-2"})
            <div class="col-md-10">@Html.TextBoxFor(model => model.Ad)</div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Cinsiyet, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.DropDownListFor(model => model.Cinsiyet,Model.CinsiyetSecim)</div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MedeniDurum, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
            @Html.RadioButtonFor(model => model.MedeniDurum, 0) Evli 
            @Html.RadioButtonFor(model => model.MedeniDurum, 1) Bekar
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Ehliyet, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.CheckBoxFor(model=>model.Ehliyet)</div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Parola, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.PasswordFor(model => model.Parola)</div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Mesaj, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.TextAreaFor(model => model.Mesaj, new { @rows = 5, @cols = 50 })</div>
        </div>
    </div>
}
